/* Panel */

#panel
{
	background:	#edeceb;
	border:		1px solid #1a1a1a;
	border-radius:	3px;
}

/* Buttons */

QToolButton::menu-indicator
{
	image:		none;
}

#closeButton
{
	qproperty-icon:	url(lxqt-runner/close.svg);
	margin:		2px;
}

#closeButton:hover
{
	background:	#ffffff;
	border:		1px solid #1a1a1a;
	border-radius:	3px;
}

#closeButton:pressed
{
	background:	#ffffff;
	border:		1px solid #909090;
	border-radius:	3px;
	padding:	3px;
}

#actionButton
{
	qproperty-icon:	url(lxqt-runner/down-arrow.svg);
	margin:		2px;
}

#actionButton:hover
{
	background:	#ffffff;
	border:		1px solid #909090;
	border-radius:	3px;
}

#actionButton:pressed
{
	background:	#ffffff;
	border:		1px solid #909090;
	border-radius:	3px;
	padding:	3px;
}


/* Command Box */

QLineEdit
{
	color:				#1a1a1a;
	background:			#ffffff;
	selection-color:	#ffffff;
	selection-background-color:#80a0d0;
	border:		1px solid #909090;
	border-radius:		3px;
	padding:			6px;
}

/*
 *Search results list
 */

#commandList {
	border:				none;
	background-color:			#f4f4f4;
	alternate-background-color:	#e5e5e5;
	color:				#6b6b6b;
	selection-color:	#ffffff;;
	selection-background-color:	#80a0d0;
}

