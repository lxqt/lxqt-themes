	background:			#ffffff;

	border:				1px solid #a0a0a0;

	padding:			0px;

	margin-right:			2px;
}

#WingMenuPlugin ApplicationsView::item {
	color:				#1a1a1a;
	background:			#ffffff;

	padding-left:			8px;
	padding-right:			20px;
	padding-top:			4px;
	padding-bottom:			4px;
}

#WingMenuPlugin ApplicationsView::item:hover, 
#WingMenuPlugin ApplicationsView::item:selected {
