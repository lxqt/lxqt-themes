/* Hard-coded colors for the CPU and system resource graph plugins */
#CpuLoadPlugin, #SysStatPlugin {
        min-width:                      16px;
        min-height:                     16px;

        color:                          #004000;
        background:                     #000000;

        border:				1px solid #edeceb;

	margin:				1px;
}

#CpuLoad, #SysStat {
        color:                          #00ff00;
        background:                     #004000;

        qproperty-fontColor:            #00ff00;

        padding:                        2px;
}

#SysStat > QLabel {
        color:                          #1a1a1a;
        background:                     #ffffff;
}

#SysStat_Graph {
	color:				#00ff00;
        background:                     #ffffff;

        qproperty-gridColor:            rgba(0, 255, 0, 25%);
        qproperty-titleColor:           rgba(255, 255, 255, 75%);

        qproperty-cpuSystemColor:       #008000;
        qproperty-cpuUserColor:         #00ff00;
        qproperty-cpuNiceColor:         #008000;
        qproperty-cpuOtherColor:        #004000;
        qproperty-frequencyColor:       rgba(0, 255, 0, 25%);

        qproperty-memAppsColor:         #00ff00;
        qproperty-memBuffersColor:      #008000;
        qproperty-memCachedColor:       #004000;

        qproperty-swapUsedColor:        #008000;

        qproperty-netReceivedColor:     #00ff00;
        qproperty-netTransmittedColor:  #009000;
}
