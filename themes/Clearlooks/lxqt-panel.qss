#WingMenuPlugin #CategoryButton {
	color:				#1a1a1a;
	background:			#f0f0f0;

	font:				normal;

	border:				1px solid transparent;
	border-radius:			3px;

	margin-top:			0px;
	margin-bottom:			0px;
	margin-left:			0px;
	margin-right:			2px;
}

#WingMenuPlugin #CategoryButton:hover {
	color:				#ffffff;
	background:			qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #a0c0e0, stop:1 #80a0d0);

	border:				1px solid #5070a0;
	border-radius:			3px;
}

#WingMenuPlugin QToolButton {
	color:				#1a1a1a;
	background:			#f0f0f0;

	border:				1px solid transparent;

	padding:			2px;
	margin:				0px;
}

#WingMenuPlugin QToolButton:hover {
	color:				#1a1a1a;
	background:			#ffffff;

	border:				1px solid #a0a0a0;
	border-radius:			3px;
}

#WingMenuPlugin QToolButton:pressed {
	color:				#1a1a1a;
	background:			qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #d6d4d2, stop:1 #c2bfbc);

	border:				1px solid #909090;
	border-radius:			3px;
