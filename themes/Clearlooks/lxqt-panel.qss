/* Colors for the bulk panel */
LXQtPanel, LXQtPanel #BackgroundWidget {
        color:                          #1a1a1a;
        background:                     #edeceb;
	border:				0px solid transparent;
}

/* Catch-all settings for panel plugins and their subwidgets 
   not otherwise styled in this theme: 
   #ColorPicker
   #Custom and #CustomButton
   #DirectoryMenu
   #Dom
   #LXQtMount
   #NetworkMonitor
   #Sensors
   #ShowDesktop
   #Spacer
*/	

Plugin > QWidget, Plugin > QWidget > QWidget {
	border:				0px solid transparent;
	color:				#1a1a1a;
	background:			#edeceb;
}

Plugin > QToolButton, 
Plugin > QWidget > QToolButton,
Plugin > QWidget > QToolButton > QWidget > QToolButton {
	color:				#1a1a1a;
        background:                     #edeceb;

	/* prevents unexpected borders/boxes on hover */
	border:				0px solid transparent;

	padding:			0px;

	margin-left:			2px;
	margin-right:			2px;
}

/* Tooltip (popups/"balloon help" settings) */
QToolTip {
	color:				#000000;
	background:			#f5f5b5;

	border:				1px solid #191919;

	padding:			2px;
}

/* General menu settings */
QMenu {
	color:				#1a1a1a;
	background:			#ffffff;

	border:				1px solid #1a1a1a;

	min-width:			100px;
}

QMenu QToolButton {
	color:				#ffffff;
	background:			#80a0d0;

	font:				bold;

        border:				0px solid transparent;

	padding:			2px;
	margin:				0px;
}

QMenu::icon { padding-right: 3px; }

QMenu::item {
	border:				1px solid transparent;
	border-radius:			3px;

	padding-left:			8px;
	padding-right:			20px;
	padding-top:			2px;
	padding-bottom:			2px;

	margin:				1px;
}

QMenu::item:selected {
	color:				#ffffff;
	background:			qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #a0c0e0, stop:1 #80a0d0);

	border:				1px solid #5070a0;
	border-radius:			3px;
}

QMenu::item:disabled {
	color:				#808080;
	background:			transparent;
}

QMenu::indicator {
	width:				14px;
	height:				14px;
	background:			transparent;
	padding-left:			3px;
}

QMenu::indicator:non-exclusive { image: url(unchecked.svg); }
QMenu::indicator:non-exclusive:checked { image:	url(checked.svg); }
QMenu::indicator:non-exclusive:checked:selected { image: url(checked-selected.svg); }
QMenu::indicator:non-exclusive:unchecked { image: url(unchecked.svg); }
QMenu::indicator:non-exclusive:unchecked:selected { image: url(unchecked-selected.svg); }

QMenu::left-arrow { image: url(arrow-left.svg); }
QMenu::right-arrow { image: url(arrow-right.svg); }
QMenu::left-arrow:selected { image: url(arrow-left-selected.svg); }
QMenu::right-arrow:selected { image: url(arrow-right-selected.svg); }

/* Main menu icon and search settings */
#MainMenu, #MainMenu:hover, #MainMenu:pressed {
	color:				#1a1a1a;
	background:			transparent;
        qproperty-icon:                 url(mainmenu.svg);

	padding:			2px;
}

#MainMenu QLineEdit {
	color:				#000000;
	background:			#ffffff;

	selection-color:		#ffffff;
	selection-background-color:	#80a0d0;

	border:				1px solid #a0a0a0;
	border-radius:			3px;

	padding:			2px;
	margin:				2px;
}

#MainMenu QMenu {
	color:				#1a1a1a;
	background:			#ffffff;

	border:				1px solid #1a1a1a;
}

#MainMenu QMenu::icon { padding-right: 3px; }

#MainMenu QMenu::left-arrow { image: url(arrow-left.svg); }
#MainMenu QMenu::right-arrow { image: url(arrow-right.svg); }
#MainMenu QMenu::left-arrow:selected { image: url(arrow-left-selected.svg); }
#MainMenu QMenu::right-arrow:selected { image: url(arrow-right-selected.svg); }

#MainMenu QMenu::item {
	border:				1px solid transparent;
	border-radius:			3px;

	padding-left:			8px;
	padding-right:			20px;
	padding-top:			2px;
	padding-bottom:			2px;

	margin:				1px;
}

#MainMenu QMenu::item:selected {
	color:				#ffffff;
	background-color:		qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #a0c0e0, stop:1 #80a0d0);

	border:				1px solid #5070a0;
	border-radius:			3px;
}

#MainMenu ActionView {
	color:				#1a1a1a;
	background:			#ffffff;

	border:				1px solid transparent;
	border-radius:			3px;

	min-width:			100px;
}

#MainMenu ActionView::item {
	color:				#1a1a1a;
	background:			#ffffff;

	border:				1px solid transparent;
	border-radius:			3px;

	padding:			0px;
	margin:				0px;
}

#MainMenu ActionView::item:hover,
#MainMenu ActionView::item:selected,
#MainMenu ActionView::item:selected:hover {
	color:				#ffffff;
	background-color:		qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #a0c0e0, stop:1 #80a0d0);

	border:				1px solid #5070a0;
	border-radius:			3px;
}

/* Taskbar */ 
#TaskBar, #DesktopSwitch {
	color:				#1a1a1a;
	background:			#transparent;
}

#TaskBar QToolButton, #DesktopSwitch QToolButton {
	color:				#1a1a1a;
	background:			#f0f0f0;

	padding-left:			2px;
	padding-right:			2px;
	padding-top:			1px;
	padding-bottom:			1px;

	border:				1px solid #909090;
	border-radius:			3px;

	margin-left:			1px;
	margin-right:			1px;
	margin-top:			2px;
	margin-bottom:			1px;
}

#TaskBar QToolButton:on, #TaskBar QToolButton:pressed,
#DesktopSwitch QToolButton:on, #DesktopSwitch QToolButton:pressed {
	color:				#1a1a1a;
	background:			qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #d6d4d2, stop:1 #c2bfbc);

	border:				1px solid #909090;
}

#TaskBar QToolButton:hover, #TaskBar QToolButton:on:hover,
#DesktopSwitch QToolButton:hover, #DesktopSwitch QToolButton:on:hover {
	color:				#000000;
	background:			#ffffff;

	border:				1px solid #a0a0a0;
}

#TaskBar QToolButton[urgent="true"],
#TaskBar QToolButton[urgent="true"]:hover {
	color:				#ffffff;
	background:			qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #a0c0e0, stop:1 #80a0d0);

	border:				1px solid #5070a0;
}

/* QuickLaunch (item icons) bar */
#QuickLaunch,
#QuickLaunchPlaceHolder {
        color:                          #232323;
        background:                     #edeceb;

	padding:			2px;
}

#QuickLaunch QToolButton,
#QuickLaunch QToolButton:hover {
        color:                          #1a1a1a;
        background:                     transparent;

	padding:			2px;
	margin:				1px;
}

#QuickLaunch QToolButton:pressed {
	padding:			2px;
        margin:				2px;
}

/* Clock plugin */
#WorldClock {
	color:				#1a1a1a;
	background:			transparent;

	padding:			2px;
	margin:				2px;
} 

#WorldClockContent {
	color:				#1a1a1a;
	background:			transparent;

	margin-left:			2px;
	margin-right:			2px;
}

/* Calendar settings */
QCalendarWidget QAbstractItemView {
	color:				#000000;
	background:			#ffffff;

	alternate-background-color:	#edeceb;

	border-left:			1px solid #1a1a1a;
	border-right:			1px solid #1a1a1a;
	border-top:			1px solid #5070a0;
	border-bottom:			1px solid #1a1a1a;

	border-radius:			0px;

	padding:			3px;
}

QCalendarWidget QAbstractItemView:enabled {
	color:				#000000;
	background:			#edeceb;

	selection-color:		#ffffff;
	selection-background-color:	qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #a0c0e0, stop:1 #80a0d0);
}

QCalendarWidget QAbstractItemView:disabled {
	color:				#808080;
}

QCalendarWidget QMenu {
	color:                          #1a1a1a;
	background:                     #ffffff;

	border:                         1px solid #1a1a1a;
}

QCalendarWidget QToolButton,
QCalendarWidget QToolButton:hover,
QCalendarWidget QToolButton:pressed {
	color:				#ffffff;
	background:			transparent;

	border:				none;

	padding:			3px;
	margin:				1px;
}

QCalendarWidget QToolButton::menu-indicator { /* Remove the down arrow */
	image:				none;
}

QCalendarWidget #qt_calendar_navigationbar {
	color:				#ffffff;
	background:			qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #a0c0e0, stop:1 #80a0d0);

	font:				bold;

	border-left:			1px solid #5070a0;
	border-right:			1px solid #5070a0;
	border-top:			1px solid #5070a0;
	border-bottom:			none;

	border-radius:			1px;
}

QCalendarWidget #qt_calendar_prevmonth {
	qproperty-icon:			url(calendar-popup/left-arrow.svg);
	qproperty-iconSize:		16px;

	border:				none;
}

QCalendarWidget #qt_calendar_nextmonth {
	qproperty-icon:			url(calendar-popup/right-arrow.svg);
	qproperty-iconSize:		16px;

	border:				none;
}

/* Systray and applets, which may reside inside or outside */
#StatusNotifierPlugin {
	color:				#000000;
	background:			transparent;

	min-width:			0px;
	min-height:			20px;
}

/* Backlight and Volume */
#Backlight, #Volume {
	color:				#1a1a1a;
	background:			#transparent;

	border:				1px solid transparent;
}

#Backlight SliderDialog, VolumePopup {
	color:				#1a1a1a;
	background:			#f0f0f0;

	border:				1px solid #909090;
}

#Backlight > SliderDialog > QSlider,
VolumePopup > QSlider {
	color:				#1a1a1a;
	background:			transparent;

	min-width:			16px;
	max-width:			16px;
	min-height:			100px;
	max-height:			100px;
}

#Backlight > SliderDialog > QSlider::groove:vertical, 
VolumePopup > QSlider::groove:vertical {
	color:				#1a1a1a;
	background:			#8eb2df;

	width:				4px;

	border:				1px solid #597ba6;
}

#Backlight > SliderDialog > QSlider::sub-page:vertical,
VolumePopup > QSlider::sub-page:vertical {
	color:				#000000;
	background:			#d7d5d3;

	border:				1px solid #888481;
}

#Backlight > SliderDialog > QSlider::handle:vertical,
VolumePopup > QSlider::handle:vertical {
	color:				#1a1a1a;
	background:			#f0f0f0;

	width:				12px;
	height:				20px;

	border:				1px solid #909090;
	border-radius:			2px;

	background-image:		url(handle-lines.png);
	background-repeat:		no-repeat;
	background-position:		center;
	background-attachment:		fixed;

	margin-left:			-4px;
	margin-right:			-4px;
	margin-top:			-1px;
	margin-bottom:			-1px;
}

#Backlight > SliderDialog > QToolButton,
#Backlight > SliderDialog > QToolButton:pressed,
#Backlight > SliderDialog > QToolButton:hover {
	color:				#1a1a1a;
	background:			transparent;

	border:				0px solid transparent;

	padding:			3px;

	qproperty-iconSize:		16px;
}

VolumePopup > QPushButton {
	color:				#1a1a1a;
	background:			transparent;

	padding:			3px;

	margin:				3px;

        border:				0px solid transparent;
	border-radius:			3px;

	qproperty-iconSize:		16px;
}


VolumePopup > QPushButton:pressed {
	color:				#000000;
	background:			qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #d6d4d2, stop:1 #c2bfbc);

	border:				1px solid #909090;
}

VolumePopup > QPushButton:hover {
	color:				#1a1a1a;
	background:			transparent;
}

/* Keyboard indicators - Caps/Num/Scroll Lock and Keymap */
#KbIndicator > QLabel, #KbIndicator > QToolButton { padding: 2px; }

#KbIndicator #LayoutLabel { background: transparent; }

#KbIndicator #CapsLockLabel { color: #a0a0a0; font: normal; }
#KbIndicator #CapsLockLabel:enabled { color: #000000; font: bold; }
#KbIndicator #CapsLockLabel:!enabled { color: #000000; font: normal; }
#KbIndicator #CapsLockLabel:disabled { color: #a0a0a0; font: normal; }

#KbIndicator #NumLockLabel { color: #a0a0a0; font: normal; }
#KbIndicator #NumLockLabel:enabled { color: #000000; font: bold; }
#KbIndicator #NumLockLabel:!enabled { color: #000000; font: normal; }
#KbIndicator #NumLockLabel:disabled { color: #a0a0a0; font: normal; }

#KbIndicator #ScrollLockLabel { color: #a0a0a0; font: normal; }
#KbIndicator #ScrollLockLabel:enabled { color: #000000; font: bold; }
#KbIndicator #ScrollLockLabel:!enabled { color: #000000; font: normal; }
#KbIndicator #ScrollLockLabel:disabled { color: #a0a0a0; font: normal; }

/* Sensors theming appears not to work yet... */
#Sensors {}

