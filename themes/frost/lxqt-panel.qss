/*
 * WorldClock
 */

#WorldClockPlugin {
    margin-left: 2px;
    margin-right: 2px;
}

#WorldClock {
    margin-left: 2px;
    margin-right: 2px;
}

#WorldClock:hover {
    background: #1A1A1A;
}

#WorldClock QLabel {
    margin-left: 2px;
