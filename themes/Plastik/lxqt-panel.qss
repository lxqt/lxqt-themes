LXQtPanel #BackgroundWidget
{
	background-color:	qlineargradient(x1:0, y1:0, x2:0, y2:1 stop:0 #ffffff, stop:0.1 #cccccc, stop:1 #eeeeee);
	border-top:		1px solid #969696;
}

Plugin > QWidget, Plugin > QWidget > QWidget
{
	border:			0px;
	color:			rgba(0, 0, 0, 100%); /* Color of text on same */
}

Plugin > QToolButton,
Plugin > QWidget > QToolButton,
Plugin > QWidget > QToolButton > QWidget > QToolButton,

LXQtPanelPlugin > QToolButton
{
	background:		transparent;
	margin:			0px;
	padding:		2px;
	color:			#000000;
}

/* Menus */

QMenu
{
	background:		#fafafa;
	color:			#000000;
	border:			1px solid #8d8d8d;
}

QMenu QToolButton {
	border:			1px solid #8c8d90;
	border-radius:		2px;
        background-color:	qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #e4e6eb, stop:1 #d2d3d9);
	color:			#808080;
	/* padding and border guarantee that it won't be drawn by widget style */
	padding: 0px;
	font: bold;
}

QMenu::icon
{
	padding-right:		3px;
}

QMenu::icon:selected
{
	padding-right:		3px;
}

QMenu::item
{
	border:			1px solid transparent;

	padding-left:		8px;
	padding-right:		20px;
	padding-top:		2px;
	padding-bottom:		2px;
}

QMenu::item:selected
{
	border-top:		1px solid #79ac33;
        border-bottom:		1px solid #5e7f9e;
        background-color:	qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #7098bd, stop:1 #6386a7);
	color:			#ffffff;
}

QMenu::item:disabled {
    color: rgba(0, 0, 0, 50%);
    background-color: transparent;
}

QMenu::indicator {
    width: 14px;
    height: 14px;
    background-color: transparent;
    padding-left: 3px;
}

QMenu::indicator:non-exclusive:unchecked {
    image: url(/unchecked.svg);
}

QMenu::indicator:non-exclusive:unchecked:selected {
    image: url(/unchecked-selected.svg);
}

QMenu::indicator:non-exclusive:checked {
    image: url(/checked.svg);
}

QMenu::indicator:non-exclusive:checked:selected {
    image: url(/checked-selected.svg);
}

/* Taskbar */
#TaskBar QToolButton
{
	margin-left:		1px;
	margin-right:		1px;
	margin-top:		2px;
	margin-bottom:		1px;

	padding:		1px;

	background-color:	qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #ffffff, stop:0.1 #ebebeb, stop:1 #dcdcdc);
	border:			1px solid #969696;
	border-radius:		2px;
	color:			#000000;
}

#TaskBar QToolButton:on
{
	background-color:	qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #c8c8c8, stop:0.90 #d7d7d7, stop:1 #c8c8c8);
	color:			#000000;
	border:			1px solid #969696;
	border-radius:		2px;
}

#TaskBar QToolButton:hover
{
	background-color:	qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #eaeaea, stop:0.1 #d7d7d7, stop:1 #c8c8c8);
	color:			#000000;
	border:			1px solid #969696;
	border-radius:		2px;
}

#TaskBar QToolButton:pressed
{
	background-color:	qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #c8c8c8, stop:0.90 #d7d7d7, stop:1 #c8c8c8);
	color:			#000000;
	border:			1px solid #969696;
	border-radius:		2px;
}

#TaskBar QToolButton[urgent="true"]
{
	background-color:	qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #c8c8c8, stop:0.95 #d7d7d7, stop:1 #c8c8c8);
	color:			#ffffff;
	border:			1px solid #969696;
	border-radius:		2px;
}

/* Quick Launch (Icon bar) */
#QuickLaunchPlaceHolder
{
	background-color:		#fafafa;
	color:				#000000;
	padding:			0 5px;
}

#QuickLaunch QToolButton
{
	background-color:	transparent;
	margin:			0px;
	padding-top:		5px;
	padding-bottom:		5px;
}

#QuickLaunch QToolButton:pressed
{
	margin:			1px;
	padding-top:		5px;
	padding-bottom:		5px;
}

#QuickLaunch QToolButton:hover
{
	margin:			0px;
	padding-top:		5px;
	padding-bottom:		5px;
}


